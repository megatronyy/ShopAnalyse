
@{
    ViewBag.Title = "商铺求购";
    Layout = "~/Views/Shared/_LayoutSecond.cshtml";
}

<footer class="mui-bar mui-bar-footer ud-footer">
    @*<a href="#modal" class="mui-btn mui-btn-grey kz-btn-white">修改</a>*@
    <a href="#" class="mui-btn mui-btn-warning">发布</a>
</footer>
<div class="mui-content mt18">
    <form class="mui-input-group">
        <div class="mui-input-row issue-car-span1">
            <label>车源类型：</label>
            <span class="active">国产合资</span><span>国产合资</span><span>国产合资</span>
        </div>
        <div class="mui-input-row issue-car-span1">
            <label>车型车款：</label>
            <select name="" id="">
                <option value="">请选择</option>
            </select>
        </div>
        <div class="mui-input-row issue-car-span1">
            <label>经销商报价：</label>
            <input class="shop-select-set" type="text" placeholder="请输入"> 万元
        </div>
        <div class="mui-input-row issue-car-span1">
            <label>收车地区：</label>
            <select name="" id="">
                <option value="">请选择</option>
            </select>
        </div>
        <div class="mui-input-row issue-car-span1">
            <label>外观：</label>
            <select name="" id="">
                <option value="">请选择</option>
            </select>
        </div>
        <div class="mui-input-row issue-car-span1">
            <label>内饰：</label>
            <select name="" id="">
                <option value="">请选择</option>
            </select>
        </div>
        <div class="mui-input-row issue-car-span1">
            <label>求购数量：</label>
            <div class="mui-numbox issues-numbox" data-numbox-step="1" data-numbox-min="0" data-numbox-max="10">
                <button class="mui-btn mui-btn-numbox-minus" type="button" disabled="">-</button>
                <input class="mui-input-numbox" type="number">
                <button class="mui-btn mui-btn-numbox-plus" type="button">+</button>
            </div>
        </div>
        <div class="mui-input-row issue-car-span1">
            <label>有效期：</label>
            <select name="" id="">
                <option value="">请选择</option>
            </select>
        </div>
        <div class="mui-input-row issue-car-span1">
            <label>联系方式：</label>
            <input type="text" placeholder="请输入">
        </div>
        <div class="mui-input-row mui-input-row-textarea" style="display: none;">
            <label>联系方式：</label>
            <textarea id="question" rows="5" placeholder="车辆颜色等特殊说明"></textarea>
        </div>
    </form>
</div>
<!-- 发布成功弹窗 -->
<div class="shop-layer" style="display: none;">
    <p>根据您发布的车源，系统自动为您匹配到相关车源<span>6</span>台</p>
    <div class="shop-layer-btn"><img src="../img/shop-layer-btn1.png" alt=""></div>
    <div class="shop-layer-close"><img src="../img/shop-layer-close1.png" alt=""></div>
</div>
<!-- 发布失败 -->
<div class="shop-share-hint find-car-hint" style="display:none;">车源发布失败，请重新发布</div>
<div class="shop-mask" style="display: none;"></div>
<script src="../js/zepto.min.js"></script>
<script>
    $('.shop-mask').css({
        width: $(window).width(),
        height: $(window).height()
    })
</script>

